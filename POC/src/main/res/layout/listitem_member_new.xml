<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingLeft="5px"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/talk_iv_presence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/user_state_offline" />

        <TextView
            android:id="@id/talk_tv_group_member"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:layout_marginRight="10dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="?theme_color_text1"
            android:textIsSelectable="true"
            android:textSize="18dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="20px"
        android:gravity="center_vertical|right" 
        android:orientation="horizontal">
        
        <ImageView
            android:id="@id/talk_iv_group_role"
            android:layout_width="wrap_content"
            android:layout_height="24dip"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:src="@drawable/media_role1" />

        <CheckBox
            android:id="@id/talk_cb_group_member"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"
            android:clickable="false" />
        <!-- android:button="?theme_btn_check"-->
    </LinearLayout>

</LinearLayout>