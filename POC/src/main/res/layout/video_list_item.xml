<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/talk_video_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_msgbox"
        android:layout_margin="8dip" >

        <ImageView
            android:id="@+id/talk_video_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_listen_high"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="10dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/talk_video_connect">

            <TextView
                android:id="@+id/talk_video_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="5dip"
                android:gravity="center"/>
            <TextView
                android:id="@+id/talk_video_item_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:padding="5dip"
                android:gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>