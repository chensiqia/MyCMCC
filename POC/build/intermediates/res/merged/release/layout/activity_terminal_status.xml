<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TerminalStatusActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/more_port_status"
            android:textColor="?theme_color_text"
            android:textSize="24sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="28px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/port_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_model"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/port_model_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_model"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/net_operate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_network"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/net_operate_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_network"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/signal_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_signal_strength"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/signal_strength_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_signal_strength"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/mobile_network_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_mobile_net_model"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/mobile_network_model_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_mobile_net_model"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/mobile_network_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_mobile_net_status"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/mobile_network_status_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_mobile_net_status"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/phone_number_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/imei_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imei_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/imei_info_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/port_model"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/serial_nember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/serial_number_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />

                <TextView
                    android:id="@+id/serial_nember_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/serial_number_info"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_normal_size" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <include layout="@layout/include_bottom_footer" />
</FrameLayout>